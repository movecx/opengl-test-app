{
    "version":"0.2.0",
    "configurations": [
        {
            "name": "OpenGL Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/OpenGLTest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build",
            "miDebuggerPath": "your_gdb_here",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}